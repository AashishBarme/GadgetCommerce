@using GadgetCommerce_v2.Application.Services.Products.ViewModel
@model ProductCreateVM

<div class="row orderForm">
    <form asp-controller="Product" asp-action="Create" method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
        <h3 class="col-md-offset-2">Create new Product</h3>

        <div class="form-group">
            <label asp-for="ProductImage" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="ProductImage" type="file" class="form-control" placeholder="Add Product Image" name="file">
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ProductName" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="ProductName" class="form-control" placeholder="Enter Product ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductSku" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="ProductSku" class="form-control" placeholder="Enter Product ProductSku" />
                <span asp-validation-for="ProductSku" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProductPrice" class="col-md-2 control-label"></label>
            <div class="col-md-6">
                <input asp-for="ProductPrice" class="form-control" placeholder="Enter Product ProductPrice" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="col-md-2 control-label"></label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.CategoryId,
                                       new SelectList(Model.Categories.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"), "Select Category",
                                       htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

        </div>



        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Return" asp-controller="Product" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Create" />
            </div>
        </div>
    </form>
</div>