@model IEnumerable<Product>
@{ int counter = 0; } 

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Product" asp-action="Create">Create new product</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>SN</th>
            <th>Image</th>
            <th>Name</th>
            <th>SKU</th>
            <th>Price</th>
            <th>Category</th>
            <th>Edit </th>
            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product product in Model)
        {
            <tr>
                <td>@(++counter)</td>
                <td>@product.ProductImage</td>
                <td>@product.ProductName</td>
                <td>@product.ProductSku</td>
                <td>@product.ProductPrice</td>
                <td>@product.Category.Name</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" >Delete</a></td>
            </tr>
        }
    </tbody>
</table>