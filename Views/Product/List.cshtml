@model IEnumerable<ProductViewModel>
@{ int counter = 0; } 

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Category" asp-action="Create">Create new Category</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>SN</th>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Edit </th>
            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ProductVM in Model)
        {
            <tr>
                <td>@(++counter)</td>
                <td>@ProductVM.Product.ProductImage</td>
                <td>@ProductVM.Product.ProductName</td>
                <td>@ProductVM.Product.ProductPrice</td>
                <td>@ProductVM.CategoryName</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Product" asp-action="Update" asp-route-id="@ProductVM.Product.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Product" asp-action="Delete" asp-route-id="@ProductVM.Product.Id" >Delete</a></td>
            </tr>
        }
    </tbody>
</table>