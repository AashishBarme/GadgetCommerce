@model IEnumerable<Customer>
@{ int counter = 0; } 

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Customer" asp-action="Create">Create new Customer</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>SN</th>
            <th>Username</th>
            <th>Last Login</th>
            <th>Last Login IP Address</th>
            <th>Edit </th>
            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Customer customer in Model)
        {
            <tr>
                <td>@(++counter)</td>
                <td>@customer.UserName</td>
                <td>@customer.LastLogin</td>
                <td>@customer.LastLoginIpAddress</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Customer" asp-action="Update" asp-route-id="@customer.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-id="@customer.Id" >Delete</a></td>
            </tr>
        }
    </tbody>
</table>