@using GadgetCommerce_v2.Application.Services.Admins.ViewModel
@model IEnumerable<AdminListVM>
@{ int counter = 0; } 

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Admin" asp-action="Create">Create new Admin</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>SN</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Last Login</th>
            <th>Last Login Ip Address</th>
            <th>Edit </th>
            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (AdminListVM admin in Model)
        {
            <tr>
                <td>@(++counter)</td>
                <td>@admin.Username</td>
                <td>@admin.Email</td>
                <td>@admin.LastLogin</td>
                <td>@admin.LastLoginIpAddress</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Admin" asp-action="Update" asp-route-id="@admin.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="Delete" asp-route-id="@admin.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>