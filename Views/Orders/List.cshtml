@model IEnumerable<OrdersViewModel>
@{ int counter = 0; } 

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Orders" asp-action="Create">Create new Category</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>SN</th>
            <th>Product Name</th>
            <th>Customer Name</th>
            <th>Shipping Address</th>
            <th>Status</th>
            <th>Edit </th>
            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (OrdersViewModel orders in Model)
        {
            <tr>
                <td>@(++counter)</td>
                <td>@orders.Order.Product.ProductName</td>
                <td>@orders.Order.Customer.FirstName  @orders.Order.Customer.LastName</td>
                <td>@orders.Order.ShippingAddress</td>
                <td>@orders.OrderStatusValue</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Orders" asp-action="Update" asp-route-id="@orders.Order.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Orders" asp-action="Delete" asp-route-id="@orders.Order.Id" >Delete</a></td>
            </tr>
        }
    </tbody>
</table>