@model IEnumerable<Orders>
@{ int counter = 0; } 

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Orders" asp-action="Create">Create new Category</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>SN</th>
            <th>Product Name</th>
            <th>Customer Name</th>
            <th>Shipping Address</th>
            <th>Status</th>
            <th>Edit </th>
            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Orders orders in Model)
        {
            <tr>
                <td>@(++counter)</td>
                <td>@orders.Product.ProductName</td>
                <td>@orders.Customer.FirstName  @orders.Customer.LastName</td>
                <td>@orders.ShippingAddress</td>
                <td>@orders.OrderStatus</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Orders" asp-action="Update" asp-route-id="@orders.Id">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Orders" asp-action="Delete" asp-route-id="@orders.Id" asp-route-authorId="@ViewBag.AuthorId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>